<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacob.whereami.DrawerFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:id="@+id/navigation_header_container">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:textSize="25sp"
            android:id="@+id/locationName"
            android:paddingLeft="10dp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navigation_header_container"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:onClick="onClickNumber"
            android:textColor="#2200CC"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webAddress"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:onClick="onClickWeb"
            android:textColor="#2200CC"/>

        <Button
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placesButton"
            android:onClick="onPlacesClick"
            android:text="Find Location" />

    </LinearLayout>

</RelativeLayout>